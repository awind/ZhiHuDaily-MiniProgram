/**index.wxss**/
.swiper {
  width: 100%;
  height: 48vh;
}

.slide-image {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}

.items-container {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin: auto;
}

.items {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  margin: 0;
  padding: 0;
}

.item {
  display: block;
  text-align: center;
  font-size:30rpx;
  color:#000000;
  line-height: 30rpx;
  margin: 0;
  padding: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.line{
  width:100%;
  height:2rpx;
  background:#aaa;
}
